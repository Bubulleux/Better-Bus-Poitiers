<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".ActivityFixTimeTable"
		android:padding="@dimen/layout_padding">
	
	<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/station_name"
			android:text="Station Name"
			android:textSize="40sp"
			android:gravity="center"
			app:layout_constraintTop_toTopOf="parent"
			/>
	
	
	<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			
			app:layout_constraintTop_toBottomOf="@id/station_name"
			app:layout_constraintBottom_toTopOf="@id/table_layout_btn">
		
		<ListView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/list_view"
				android:clickable="false"/>
	
	</FrameLayout>
	
	<!--	<TextView-->
	<!--			android:layout_width="match_parent"-->
	<!--			android:layout_height="match_parent"-->
	<!--			android:id="@+id/next_passage_list_empty_txt"-->
	<!--			android:text="@string/no_passage"-->
	<!--			android:textSize="@dimen/textSize"-->
	<!--			android:gravity="center"/>-->
	<!--	<ProgressBar-->
	<!--			style="?android:attr/progressBarStyle"-->
	<!--			android:layout_width="wrap_content"-->
	<!--			android:layout_height="wrap_content"-->
	<!--			android:id="@+id/progressBar"-->
	<!--			android:visibility="visible"-->
	<!--			-->
	<!--			android:layout_gravity="center"/>-->
	
	
	<TableLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/table_layout_btn"
			
			app:layout_constraintBottom_toBottomOf="parent">
		
		<TableRow
				android:layout_width="match_parent"
				android:layout_height="match_parent">
			<Spinner
					android:id="@+id/line_spinner"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:autofillHints="Line"/>
		</TableRow>
		
		<TableRow
				android:layout_width="match_parent"
				android:layout_height="match_parent">
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="25sp"
					android:text="Destinatio,n: "/>
			
			<Spinner
					android:id="@+id/destination_spinner"
					android:layout_height="wrap_content"
					
					android:layout_weight="1"/>
		</TableRow>
		
		<TableRow
				android:layout_width="match_parent"
				android:layout_height="match_parent">
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="25sp"
					android:text="Date: "/>
			
			<EditText
					android:id="@+id/date_input"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:importantForAutofill="no"
					android:inputType="date"
					android:clickable="false"
					android:cursorVisible="false"
					android:focusable="false"
					android:focusableInTouchMode="false"
					
					android:layout_weight="1"/>
		</TableRow>
		
		<TableRow
				android:layout_width="match_parent"
				android:layout_height="match_parent">
			
			<Button
					android:id="@+id/go_back_btn"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/go_back"/>
			
			<Button
					android:id="@+id/next_passage_btn"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/next_passge_txt"/>
		</TableRow>
	</TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>