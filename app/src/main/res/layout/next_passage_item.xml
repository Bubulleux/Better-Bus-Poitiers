<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="@dimen/line_square"
			android:minWidth="@dimen/line_square"
			android:layout_margin="@dimen/line_square_margin"
			android:id="@+id/line_id"
			android:text="99"
			android:gravity="center"
			android:textSize="@dimen/line_square_text_size"
			android:background="#F00"/>

	<TextView
			android:layout_width="match_parent"
			android:layout_height="@dimen/line_square"
			android:id="@+id/direction_txt"
			android:text="Terminus"
			android:textSize="@dimen/textSize"
			android:gravity="center_vertical"
			android:layout_alignParentTop="true"
			android:layout_toStartOf="@+id/time_txt"
			android:layout_toLeftOf="@+id/time_txt"

			android:layout_toEndOf="@+id/line_id"
			android:layout_toRightOf="@+id/line_id"
			/>

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="23dp"
			android:id="@+id/time_txt"
			android:text="XX : XX"
			android:gravity="center"
			android:textSize="15sp"
			android:layout_marginEnd="10dp"
			android:layout_marginStart="10dp"
			android:layout_alignParentEnd="true"
			android:layout_alignParentTop="true"
			android:layout_alignParentRight="true"/>

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="23dp"
			android:id="@+id/time_relative_txt"
			android:text="00 min"
			android:textSize="13sp"
			android:gravity="center"
			android:layout_alignEnd="@id/time_txt"
			android:layout_alignRight="@id/time_txt"

			android:layout_alignStart="@id/time_txt"
			android:layout_below="@+id/time_txt"
			android:layout_alignLeft="@id/time_txt"/>

</RelativeLayout>