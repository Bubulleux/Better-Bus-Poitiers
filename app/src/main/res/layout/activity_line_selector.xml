<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:padding="@dimen/layout_padding"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".LineSelectorActivity">

	<ListView
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:id="@+id/line_selection_view"
			
			app:layout_constraintTop_toBottomOf="@id/select_all_btn"
			app:layout_constraintBottom_toTopOf="@id/finish_btn"/>

	<Button
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/finish_btn"
			android:text="@string/finish_btn"

			app:layout_constraintBottom_toBottomOf="parent"/>

	<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/select_all_btn"
			android:text="@string/select_all"
			
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toTopOf="parent"/>

	<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/unselect_all_btn"
			android:text="@string/unselect_all"
			
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>