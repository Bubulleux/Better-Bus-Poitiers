<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".ActivityFixTimeTable">
	
	<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/station_name"
			android:text="Station Name"
			android:textSize="40sp"
			android:gravity="center"
			app:layout_constraintTop_toTopOf="parent"
			/>
	<ScrollView
			android:layout_width="match_parent"
			android:layout_height="0dp"
			
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent">
		
	</ScrollView>
	<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			
			
			app:layout_constraintTop_toBottomOf="@+id/station_name"
			app:layout_constraintBottom_toTopOf="@+id/table_layout_btn">
		<ListView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@+id/next_passage_list"
				tools:listitem="@layout/next_passage_item"/>
		
		<TextView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@+id/next_passage_list_empty_txt"
				android:text="@string/no_passage"
				android:textSize="@dimen/textSize"
				android:gravity="center"
				/>
		
		<ProgressBar
				style="?android:attr/progressBarStyle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/progressBar"
				android:visibility="visible"
				
				android:layout_gravity="center"/>
	</FrameLayout>
	
	<TableLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/table_layout_btn"
			
			app:layout_constraintBottom_toBottomOf="parent">
		
		<TableRow
				android:layout_width="match_parent"
				android:layout_height="match_parent">
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="25sp"
					android:text="Ligne: " />
			
			<Spinner
					android:id="@+id/line_spinner"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					
					android:layout_weight="1"/>
		</TableRow>
		
		<TableRow
				android:layout_width="match_parent"
				android:layout_height="match_parent">
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="25sp"
					android:text="Destination: " />
			
			<Spinner
					android:id="@+id/destination_spinner"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					
					android:layout_weight="1"/>
		</TableRow>
		
		<TableRow
				android:layout_width="match_parent"
				android:layout_height="match_parent">
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="25sp"
					android:text="Date: "/>
			
			<EditText
					android:id="@+id/date_input"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:importantForAutofill="no"
					android:inputType="date"
					android:clickable="false"
					android:cursorVisible="false"
					android:focusable="false"
					android:focusableInTouchMode="false"
					
					android:layout_weight="1"/>
		</TableRow>
		
		<TableRow
				android:layout_width="match_parent"
				android:layout_height="match_parent">
			
			<Button
					android:id="@+id/button5"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_column="0"
					android:layout_weight="1"
					android:text="@string/go_back" />
			
			<Button
					android:id="@+id/button6"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Prochain Passage" />
		</TableRow>
	</TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>