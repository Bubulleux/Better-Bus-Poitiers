<resources xmlns:tools="http://schemas.android.com/tools">
	<!-- Base application theme. -->
	<style name="Theme.BetterVitalis" parent="Theme.MaterialComponents.DayNight.NoActionBar">
		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/purple_500</item>
		<item name="colorPrimaryVariant">@color/purple_700</item>
		<item name="colorOnPrimary">@color/white</item>
		
		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/teal_200</item>
		<item name="colorSecondaryVariant">@color/teal_700</item>
		<item name="colorOnSecondary">@color/black</item>
		
		<!-- Status bar color. -->
		<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
		
		<!-- Customize your theme here. -->
		<item name="materialButtonStyle">@style/btnStyle</item>
	</style>

	<style name="ThemeOverlay.BetterVitalis.AppWidgetContainer" parent="">
		<item name="appWidgetBackgroundColor">@color/purple_500</item>
		<item name="appWidgetTextColor">@color/light_blue_50</item>
	</style>
	
	
	<style name="btnStyle" parent="Widget.AppCompat.Button">
		<item name="android:textSize">@dimen/btn_text_size</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:layout_margin">1dp</item>
	</style>
	
</resources>