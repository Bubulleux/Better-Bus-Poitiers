<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:theme="@style/ThemeOverlay.VItalisApp.AppWidgetContainer"
		android:background="@color/widget_background_color"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:padding="@dimen/widget_margin">
	<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:id="@+id/favorite_list_empty_msg"
			android:textSize="@dimen/widget_text_size"
			android:text="@string/favorite_list_empty"
			android:gravity="center"
			/>
	
	<ListView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:id="@+id/list_view"/>


</LinearLayout>